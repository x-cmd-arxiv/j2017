culations.\n","versions":[{"version":"v1","created":"Wed, 12 Jul 2017 14:57:43 GMT"},{"version":"v2","created":"Mon, 7 Aug 2017 15:51:03 GMT"},{"version":"v3","created":"Mon, 4 Dec 2017 13:36:45 GMT"}],"update_date":"2017-12-06"}
