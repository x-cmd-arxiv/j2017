on is $0.108 \\pm 0.018$~mag.\n","versions":[{"version":"v1","created":"Tue, 5 Dec 2017 06:26:44 GMT"},{"version":"v2","created":"Thu, 29 Mar 2018 17:32:23 GMT"}],"update_date":"2018-05-23"}
