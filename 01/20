body mean motion\nresonances.\n","versions":[{"version":"v1","created":"Thu, 19 Jan 2017 18:26:52 GMT"},{"version":"v2","created":"Mon, 6 Feb 2017 20:46:35 GMT"}],"update_date":"2017-11-15"}
