ately mature biofilms.\n","versions":[{"version":"v1","created":"Tue, 28 Mar 2017 16:25:01 GMT"},{"version":"v2","created":"Sat, 13 May 2017 18:47:27 GMT"},{"version":"v3","created":"Fri, 26 Oct 2018 10:23:12 GMT"},{"version":"v4","created":"Thu, 8 Nov 2018 11:06:55 GMT"}],"update_date":"2018-11-09"}
