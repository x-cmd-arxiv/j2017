event superluminal travel in\nasymptotically flat spacetimes.\n","versions":[{"version":"v1","created":"Wed, 30 Aug 2017 23:51:17 GMT"},{"version":"v2","created":"Thu, 12 Jul 2018 13:00:40 GMT"}],"update_date":"2018-08-29"}
