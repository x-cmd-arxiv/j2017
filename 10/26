o\nfactions.\n","versions":[{"version":"v1","created":"Thu, 26 Oct 2017 00:18:38 GMT"},{"version":"v2","created":"Tue, 22 May 2018 08:12:43 GMT"},{"version":"v3","created":"Mon, 18 Jun 2018 23:07:49 GMT"},{"version":"v4","created":"Sun, 24 Jun 2018 18:27:14 GMT"},{"version":"v5","created":"Tue, 5 Feb 2019 23:20:40 GMT"},{"version":"v6","created":"Fri, 13 Sep 2019 13:50:09 GMT"}],"update_date":"2019-09-16"}
