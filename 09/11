\nmeasurements.\n","versions":[{"version":"v1","created":"Sun, 10 Sep 2017 20:37:05 GMT"},{"version":"v2","created":"Wed, 13 Sep 2017 02:38:29 GMT"},{"version":"v3","created":"Mon, 25 Sep 2017 21:15:17 GMT"},{"version":"v4","created":"Wed, 27 Sep 2017 20:02:08 GMT"}],"update_date":"2017-09-29"}
